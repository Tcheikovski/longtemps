{
  "name": "longtemps",
  "private": true,
  "repository": "Tcheikovski/longtemps",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepack": "pnpm --filter \"./packages/**\" prepack ",
    "prepack:core": "pnpm --filter \"./packages/core\" prepack ",
    "prepack:blizzard": "pnpm --filter \"./packages/blizzard\" prepack ",
    "dev:web": "pnpm --filter \"./apps/web\" dev ",
    "lint": "eslint --ext .vue,.ts,.js,.mjs .",
    "lint:fix": "eslint --ext .vue,.ts,.js,.mjs . --fix",
    "clear": "rimraf \"./(packages|apps)/**/(node_modules|dist)\""
  },
  "resolutions": {
    "@longtemps/blizzard": "workspace:*"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.46.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.14.0",
    "pnpm": ">=8.6.12"
  }
}
